<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>HelpDesk</title>
  <link type="text/css" rel="stylesheet" href="/bower/bootstrap/dist/css/bootstrap.min.css" />
  <link type="text/css" rel="stylesheet" href="/bower/font-awesome/css/font-awesome.min.css" />
  <link type="text/css" rel="stylesheet" href="/stylesheets/style.css" />
  <link type="text/css" rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body ng-app="ticketSystem" ng-controller="MainCtrl" ng-init="init()">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#/">HelpDesk</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul ng-show="isAuthenticated()" class="nav navbar-nav">
        <li><a href="#/"><i class="fa fa-lg fa-dashboard"></i> Tickets</a></li>
        <li><a href="#/ticket/new"><i class="fa fa-lg fa-ticket"></i> New Ticket</a></li>
      </ul>
      <ul ng-show="isAuthenticated()" class="nav navbar-nav navbar-right" style="">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
            <i class="fa fa-globe"></i>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <a ng-click="getProfile()"><i class="fa fa-user"></i> {{getUser().username}}</a>
              <a ng-click="logout()"><i class="fa fa-sign-out"></i> Log Off</a>
            </li>
          </ul>
        </li>
        <li class="dropdown" ng-if="isAdmin">
          <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
            <i class="fa fa-gear"></i>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <a href="#/admin/user-management"><i class="fa fa-users"></i> User management</a>
            </li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container">
  <flash-message></flash-message>
</div>
<div class="container">
  <div ui-view=""></div>
</div>
<script src="/bower/jquery/dist/jquery.js"></script>
<script src="/bower/bootstrap/dist/js/bootstrap.js"></script>
<script src="/bower/angular/angular.min.js" type="application/javascript"></script>
<script src="/bower/angular-route/angular-route.min.js" type="application/javascript"></script>
<script src='/bower/textAngular/dist/textAngular-rangy.min.js'></script>
<script src='/bower/textAngular/dist/textAngular-sanitize.min.js'></script>
<script src='/bower/textAngular/dist/textAngular.min.js'></script>
<script src="/javascripts/angular-grid.js" type="application/javascript"></script>
<script src="/bower/angular-flash-alert/dist/angular-flash.min.js"></script>
<script src="/javascripts/app.js" type="application/javascript"></script>
<script src="/bower/angular-ui-router/release/angular-ui-router.js" type="application/javascript"></script>
<script src="/javascripts/services/TicketsService.js" type="application/javascript"></script>
<script src="/javascripts/services/CommonService.js" type="application/javascript"></script>
<script src="/javascripts/services/UsersService.js" type="application/javascript"></script>
<script src="/javascripts/services/HelperService.js" type="application/javascript"></script>
<script src="/javascripts/services/Authentication.js" type="application/javascript"></script>
<script src="/javascripts/controllers/TicketsCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/NewTicketCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/ViewTicketCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/EditTicketCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/MainCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/UserCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/AdminCtrl.js" type="application/javascript"></script>
</body>
</html>